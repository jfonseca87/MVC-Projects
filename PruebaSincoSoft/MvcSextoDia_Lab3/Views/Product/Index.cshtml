@model List<Model.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style type="text/css">
        .Mensaje {
            color:red;
        }

        .Ocultar {
            visibility:hidden;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <a href="/Home/Index">Inicio</a>
        <a href="/Customer/Index">Add Customer</a>
        <a href="/Product/Index">Add Product</a>

        <hr style="color:red;" />
        <br /><br />
        <table align="center">
            <thead style="background-color:gray;">
                <tr>
                    <th colspan="3"> Productos </th>
                </tr>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Valor Unitario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Code</td>
                        <td>@producto.Name</td>
                        <td>@producto.Amount</td>
                    </tr>
                }
                @{Html.BeginForm("InsertProduct", "Product", FormMethod.Post, new { @id="frmProduct"});}

                <tr>
                    <td>@Html.TextBox("txtCode")</td>
                    <td>@Html.TextBox("txtName")</td>
                    <td>@Html.TextBox("txtVal")</td>
                    <td><input type="submit" value="Enviar" /></td>
                </tr>
                <tr>
                    <td>
                        <a href="/Home/Index">Volver...</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <br />
                        <div class="Mensaje Ocultar" id="Codigo">
                            <label> ● El Código es necesario </label>
                        </div>
                        <div class="Mensaje Ocultar" id="Nombre">
                            <label> ● El Nombre es necesario </label>
                        </div>
                        <div class="Mensaje Ocultar" id="Monto">
                            <label> ● El Valor Unitario es necesario </label>
                        </div>           
                    </td>
                </tr>
                @{Html.EndForm();}
            </tbody>
        </table>
        <br />
    </div>
    <script src="~/Assets/js/jquery.js"></script>
    <script src="~/Assets/js/Validate.js"></script>
</body>
</html>
