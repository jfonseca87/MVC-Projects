@model PagingDemo_3.Models.Person

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditPeople</title>
</head>
<body>
    <div>
        <fieldset>
            @{Html.BeginForm("EditPeople", "Home", FormMethod.Post);}
            @Html.HiddenFor(p => p.PersonId)

            <div class="form-group">
                @Html.Label("Forename")
                @Html.TextBoxFor(p => p.Forename, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Forename, null, new { @class = "validacion" })
            </div>
            <div class="form-group">
                @Html.Label("Surename")
                @Html.TextBoxFor(p => p.Surname, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Surname, null, new { @class = "validacion" })
            </div>
            <div class="form-group">
                @Html.Label("Location")
                @Html.TextBoxFor(p => p.Country, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.Country, null, new { @class = "validacion" })
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>

            @{Html.EndForm();}
        </fieldset>
    </div>
</body>
</html>
