@model PruebaSincoSoft2.Models.Usuarios

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table>
            <thead style="background-color:gray;">
                <tr>
                    <th colspan="3"> USUARIOS </th>
                </tr>
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>PASSWORD</th>
                </tr>
            </thead>
            <tbody>
                @{Html.BeginForm("Guardar", "Usuario", FormMethod.Post);}
                <tr>
                    <td> <label></label> </td>
                    <td> @Html.TextBoxFor(u => u.UsuNombre)</td>
                    <td> @Html.PasswordFor(u => u.UsuPass)</td>
                    <td> <button type="submit" title="Guardar"> Guardar </button></td>
                </tr>
                <tr>
                    <td colspan="3" style="color:red;">
                        @Html.ValidationSummary()
                    </td>
                </tr>
                @{Html.EndForm();}
            </tbody>
        </table>
        @Html.ActionLink("Volver", "Index", "Home")
    </div>
</body>
</html>
