@model Model.Cliente

@{
    ViewBag.Title = "Nuevo Cliente";
    Layout = null;
    List<Model.Sede> lstSedes = ViewBag.Sedes;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">@(Model.IdCliente > 0 ? "Edita Cliente" : "Nuevo Cliente")</h4>
</div>
@{Html.BeginForm("nuevoCliente", "Home", FormMethod.Post );}
    <div class="modal-body">
        
            @Html.HiddenFor(c => c.IdCliente)
            <div class="form-group">
                <label> Cedula: </label>
                @Html.TextBoxFor(c => c.Cedula, new { @class="form-control"})
                
            </div>
            <div class="form-group">
                <label> Nombres: </label>
                @Html.TextBoxFor(c => c.Nombres, new { @class = "form-control" })
                
            </div>
            <div class="form-group">
                <label> Apellidos: </label>
                @Html.TextBoxFor(c => c.Apellidos, new { @class = "form-control" })
                
            </div>
            <div class="form-group">
                <label> Sede: </label>
                @Html.DropDownListFor(c => c.IdSede, new SelectList(lstSedes, "IdSede", "Nombre"), "Seleccione...", new { @class = "form-control" })<br />
                
            </div>
            <div style="margin:0 auto; color:red;">
                <div class="form-group">
                    @Html.ValidationMessageFor(c => c.Cedula)
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(c => c.Nombres)
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(c => c.Apellidos)
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(c => c.IdSede)
                </div>
            </div>
            @Html.HiddenFor(c => c.FechaRegistro)
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary"> @(Model.IdCliente > 0 ? "Editar" : "Crear") </button>
    </div>
@{Html.EndForm();}

<script src="~/Assets/js/jquery.validate.min.js"></script>
<script src="~/Assets/js/jquery.validate.unobtrusive.min.js"></script>